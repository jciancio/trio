<p id="notice"><%= notice %></p>

<h1>Your Cart</h1>

<h2>Products</h2>

<table class="table talbe-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% Product.find(1) do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td>3</td>
        <td><%= image_tag product.url %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Continue Shopping', products_path, class: "btn btn-info" %> <br> <br>
<%= link_to  'Check out', new_charge_path, class: "btn btn-info" %>